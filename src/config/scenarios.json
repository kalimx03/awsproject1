{
  "visualImpairment": {
    "id": "visual",
    "title": "Visual Impairment Simulation",
    "description": "Experience navigation with progressive vision loss through 5 stages",
    "stages": {
      "1": {
        "name": "Mild Myopia",
        "description": "Slight blur and mild color desaturation",
        "effects": {
          "blurRadius": 2,
          "desaturation": 0.1,
          "chromaticAberration": 0.5
        }
      },
      "2": {
        "name": "Moderate + Tunnel Vision",
        "description": "Increased blur with peripheral vision loss",
        "effects": {
          "blurRadius": 6,
          "desaturation": 0.25,
          "vignetteStrength": 0.35
        }
      },
      "3": {
        "name": "Macular Degeneration",
        "description": "Central vision loss with preserved periphery",
        "effects": {
          "centerBlur": 15,
          "scotomaSize": 0.3
        }
      },
      "4": {
        "name": "Advanced Cataracts",
        "description": "Heavy blur with yellow tint and halos",
        "effects": {
          "blurRadius": 20,
          "contrastLoss": 0.4,
          "yellowTint": [255, 220, 100, 0.2]
        }
      },
      "5": {
        "name": "Legal Blindness",
        "description": "Near-complete darkness with audio cues only",
        "effects": {
          "darkness": 0.9
        }
      }
    },
    "tasks": [
      {
        "id": "read_sign",
        "name": "Read Street Sign",
        "description": "Navigate to and read the correct street sign",
        "wcagReference": "WCAG 1.4.3 Contrast (Minimum)",
        "realWorldImpact": "83% of websites fail contrast standards"
      },
      {
        "id": "cross_street",
        "name": "Cross Street Safely",
        "description": "Use accessible signals to cross safely",
        "wcagReference": "ADA 4.8.1 Curb Ramps",
        "realWorldImpact": "Missing APS puts 25% of blind pedestrians at risk"
      },
      {
        "id": "find_entrance",
        "name": "Find Accessible Entrance",
        "description": "Locate the accessible building entrance",
        "wcagReference": "ADA 4.1.3 Accessible Route",
        "realWorldImpact": "60% of buildings have at least one accessibility barrier"
      }
    ],
    "estimatedTime": "15-20 minutes",
    "difficulty": "Advanced"
  },
  "hearingLoss": {
    "id": "hearing",
    "title": "Hearing Loss Simulation",
    "description": "Experience a world with varying degrees of hearing impairment",
    "modes": {
      "1": {
        "name": "Mild High Frequency Loss",
        "description": "Age-related high frequency hearing loss",
        "audioConfig": {
          "filterType": "highpass",
          "frequency": 3000,
          "volume": 0.7
        }
      },
      "2": {
        "name": "Moderate Bilateral Loss",
        "description": "Moderate hearing loss in both ears",
        "audioConfig": {
          "filterType": "lowpass",
          "frequency": 1500,
          "volume": 0.5,
          "reverb": true
        }
      },
      "3": {
        "name": "Severe + Tinnitus",
        "description": "Severe loss with constant ringing",
        "audioConfig": {
          "filterType": "lowpass",
          "frequency": 800,
          "volume": 0.3,
          "tinnitus": {
            "frequency": 6000,
            "volume": 0.15
          }
        }
      },
      "4": {
        "name": "Profound - Near Silence",
        "description": "Almost complete hearing loss",
        "audioConfig": {
          "volume": 0.05,
          "visualOnly": true
        }
      },
      "5": {
        "name": "Unilateral - One Side",
        "description": "Hearing loss in one ear only",
        "audioConfig": {
          "panner": "left",
          "volume": 0.7
        }
      }
    },
    "tasks": [
      {
        "id": "follow_lecture",
        "name": "Follow Lecture",
        "description": "Comprehend lecture content with degraded audio",
        "wcagReference": "WCAG 1.2.1 Audio-only and Video-only",
        "realWorldImpact": "Auto-captions are only 70-85% accurate"
      },
      {
        "id": "name_called",
        "name": "Respond to Name",
        "description": "Notice when your name is called",
        "wcagReference": "WCAG 1.2.4 Captions",
        "realWorldImpact": "Visual cues improve comprehension by 40%"
      },
      {
        "id": "emergency",
        "name": "Emergency Response",
        "description": "React to emergency alarms",
        "wcagReference": "ADA 4.3.11 Visual Alarms",
        "realWorldImpact": "Multimodal alerts reduce response time by 75%"
      }
    ],
    "estimatedTime": "10-15 minutes",
    "difficulty": "Intermediate"
  },
  "motorDisability": {
    "id": "motor",
    "title": "Motor Disability Simulation",
    "description": "Navigate barriers from a wheelchair with realistic physics",
    "physics": {
      "maxSpeed": 0.5,
      "acceleration": 0.1,
      "deceleration": 0.05,
      "turnSpeed": 0.03,
      "width": 0.75,
      "length": 1.2,
      "turningRadius": 1.5,
      "cameraHeight": 1.2
    },
    "tasks": [
      {
        "id": "enter_building",
        "name": "Enter Building",
        "description": "Find accessible entrance and enter building",
        "adaReference": "ADA 4.1.2 Accessible Entrance",
        "realWorldImpact": "30% of wheelchair users report entry difficulties"
      },
      {
        "id": "navigate_to_meeting",
        "name": "Navigate to Meeting",
        "description": "Navigate through building to meeting room",
        "adaReference": "ADA 4.3 Clear Width",
        "realWorldImpact": "36\" minimum clear width required"
      },
      {
        "id": "find_facilities",
        "name": "Find Facilities",
        "description": "Locate and use accessible restroom",
        "adaReference": "ADA 6.2 Accessible Restrooms",
        "realWorldImpact": "Only 60% of restrooms meet accessibility standards"
      }
    ],
    "estimatedTime": "20-25 minutes",
    "difficulty": "Challenging"
  },
  "arAuditor": {
    "id": "ar",
    "title": "AR Accessibility Auditor",
    "description": "Scan real spaces for accessibility violations",
    "features": {
      "objectDetection": {
        "model": "COCO-SSD",
        "accuracy": 0.85,
        "objects": ["door", "chair", "stairs", "person", "stop sign", "traffic light"]
      },
      "contrastChecker": {
        "wcagLevels": {
          "AA": 4.5,
          "AAA": 7.0
        }
      },
      "rampDetector": {
        "maxSlope": 4.76,
        "accuracy": 0.9
      }
    },
    "violations": [
      {
        "type": "Door Width",
        "threshold": 32,
        "unit": "inches",
        "severity": "critical"
      },
      {
        "type": "Ramp Angle",
        "threshold": 4.76,
        "unit": "degrees",
        "severity": "critical"
      },
      {
        "type": "Color Contrast",
        "threshold": 4.5,
        "unit": "ratio",
        "severity": "important"
      },
      {
        "type": "Reach Range",
        "threshold": 48,
        "unit": "inches",
        "severity": "important"
      }
    ],
    "estimatedTime": "5-10 minutes",
    "difficulty": "Beginner"
  }
}
